<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.view.AdicionarAluno"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">
    <TextView
        android:id="@+id/txt1"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/adicionar_aluno_banco"
        android:textSize="32sp"/>
    <EditText
        android:id="@+id/nomeAluno"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nome_aluno"/>
    <EditText
        android:id="@+id/laboratorioAluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/laboratorio_aluno"/>
    <EditText
        android:id="@+id/emailAluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email_aluno"/>
    <EditText
        android:id="@+id/cursoAluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/curso_aluno"/>

    <Button
        android:id="@+id/btnSalvarAluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="SalvarDados"
        android:text="@string/adicionar_aluno"/>


</LinearLayout>