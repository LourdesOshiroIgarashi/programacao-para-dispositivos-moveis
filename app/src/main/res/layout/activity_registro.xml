<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/backgroud"
    tools:context=".view.Registro">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar Conta"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:layout_marginBottom="120dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/edtEmailRegistro"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/edtSenhaRegistro"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/edtSenhaConfirmacaoRegistro"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:hint="Confirme a senha"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginTop="8dp"/>

    <CheckBox
        android:id="@+id/cbMostrarSenhaRegistro"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Mostrar senha"
        android:textColor="@color/white"
        android:buttonTint="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginRight="70dp"/>

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:text="Cadastrar"
        android:textColor="#FFFFFF" />
    <Button
        android:id="@+id/btnSairRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:background="@color/white"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"/>
    <ProgressBar
        android:id="@+id/pbRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/white"
        android:indeterminate="true"
        android:visibility="invisible"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginTop="8dp"/>




</LinearLayout>