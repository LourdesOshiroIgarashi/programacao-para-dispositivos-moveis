<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomeLab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/nome_aluno"
            android:textAlignment="textStart"
            android:textColor="@color/azul_escuro"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/latLab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/email"
            android:textColor="@color/azul_escuro"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/longLab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/laboratorio"
            android:textColor="@color/azul_escuro"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/facLab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/curso"
            android:textAllCaps="false"
            android:textColor="@color/azul_escuro"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/telefone"
            android:textColor="@color/azul_escuro"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>